<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.exercise">

    <application
        android:allowBackup="true"
        android:icon="@drawable/exercise"
        android:label="@string/app_name"
        android:roundIcon="@drawable/exercise"
        android:supportsRtl="true"
        android:theme="@style/Theme.Exercise"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SettingScene"
            android:exported="false"
            android:theme="@style/PopupStyle" />
        <activity
            android:name=".RecordScene"
            android:exported="false"
            android:theme="@style/PopupStyle" />
        <activity
            android:name=".TimerScene"
            android:exported="false" />
        <activity
            android:name=".CalendarScene"
            android:exported="false"
            android:theme="@style/PopupStyle" />
        <activity
            android:name=".DBManagePopup"
            android:exported="false"
            android:theme="@style/PopupStyle" />
        <activity
            android:name=".PopupActivity"
            android:exported="false"
            android:theme="@style/PopupStyle" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.exercise.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>