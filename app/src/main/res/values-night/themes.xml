<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Exercise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkColor</item>
        <item name="colorPrimaryVariant">@color/darkColor</item>
        <item name="colorOnPrimary">@color/lLvGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkColor</item>
        <item name="colorSecondaryVariant">@color/darkColor</item>
        <item name="colorOnSecondary">@color/lLvGray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Title bar -->
        <item name="windowNoTitle">true</item>
        <!-- Second background-->
        <item name="backgroundColor">@color/lLvGray</item>
    </style>
    <style name="Calendar" parent="Theme.Material3.Dark">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RestTimeNumPick">
        <item name="android:textSize">80dp</item>
    </style>
    <style name="PopupStyle" parent="Theme.Material3.Dark.Dialog">
        <item name="colorPrimary">@color/darkColor</item>
        <item name="colorOnPrimary">@color/lLvGray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/lLvGray</item>
        <item name="android:textColorHighlight">@color/darkColor</item>
        <item name="background">@color/lLvGray</item>
        <item name="hintTextColor">@color/mLvGray</item>
    </style>
</resources>